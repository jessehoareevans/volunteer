<h1><%= @project.name() %></h1>

<% if @project.volunteers().any?() %>
  <h3>Here are all the volunteers in this project:</h3>

  <ul>
    <% @project.volunteers().each() do |volunteer| %>
      <li><%= volunteer.name() %> </li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no volunteers signed up for this project!</p>
  <% end %>

  <h3>Add a volunteer to <%= @project.name() %> </h3>

<form action="/volunteers" method="post">
  <input id="project_id" name="project_id" type="hidden" value="<%= @project.id() %>">

  <label for="name">Name of the excited volunteer:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add volunteer</button>
</form>

<div class="container">
  <a href="/"><button class="btn">Home</a>
  <a href="/projects"><button class="btn">View Projects</a>
  <a href="/projects/new"><button class="btn">Add New Project</a>
  <a href="/projects/new"><button class="btn">Add New Volunteer</a>
</div>
